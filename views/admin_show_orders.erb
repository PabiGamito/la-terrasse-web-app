<style media="screen">
  table tr th, table tr td {
    text-align: right;
    vertical-align: middle;
  }
  #todo, #done {
    display: none;
  }
</style>

<%
def timeAgo(time)
  a = (Time.now-time).to_i

  case a
    when 0 then 'maintenant'
    when 1 then 'une seconde'
    when 2..59 then a.to_s+' seconds'
    when 60..119 then 'une minute' #120 = 2 minutes
    when 120..3540 then (a/60).to_i.to_s+' minutes'
    when 3541..7100 then 'une heure' # 3600 = 1 hour
    when 7101..82800 then ((a+99)/3600).to_i.to_s+' heures'
    when 82801..172000 then 'un jour' # 86400 = 1 day
    when 172001..518400 then ((a+800)/(60*60*24)).to_i.to_s+' jours'
    when 518400..1036800 then 'une semaine'
    else ((a+180000)/(60*60*24*7)).to_i.to_s+' semaines'
  end
end
%>

<datalist id="ready-times">
  <!-- inserted by js -->
</datalist>

<section id="todo">
  <% if @todo_orders.length > 0 %>
  <table class="table table-condensed table-striped table-responsive">
    <thead>
      <tr>
        <th>Quantité</th>
        <th>Pizza</th>
        <th>Nom</th>
        <th>Commandé</th>
        <th>À récuperer</th>
        <th>Prêt à</th>
      </tr>
    </thead>
    <tbody>
    <% @todo_orders.each do |order| %>
      <tr>
        <td><%= order.amount %>x </td>
        <td><%= Product.get(order.product_id).name.capitalize %></td>
        <td><%= "#{User.get(order.user_id).first_name.capitalize} #{User.get(order.user_id).last_name.capitalize}" %></td>
        <td>il y a <%= timeAgo(order.confirmed_at.to_time) %></td>
        <td>à partir de <%= order.pickup_time.to_time.strftime("%H:%M")%></td>
        <td><input type="text" class="ready-time" list="ready-times" order-id="<%= order.id %>" value="<%= order.ready_time ? order.ready_time.to_time.strftime("%H:%M") : ""%>"></td>
        <td><button class="completed btn btn-primary" order-id="<%= order.id %>">Prêt!</button></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <h1 style="text-align: center;">Aucune commande</h1>
  <% end %>
</section>

<section id="ready">
  <table class="table table-condensed table-striped table-responsive">
    <thead>
      <tr>
        <th>Quantité</th>
        <th>Pizza</th>
        <th>Nom</th>
        <th>Commandé</th>
        <th>À récuperer</th>
      </tr>
    </thead>
    <tbody>
    <% @ready_orders.each do |order| %>
      <tr>
        <td><%= order.amount %>x </td>
        <td><%= Product.get(order.product_id).name.capitalize %></td>
        <td><%= "#{User.get(order.user_id).first_name.capitalize} #{User.get(order.user_id).last_name.capitalize}" %></td>
        <td>il y a <%= timeAgo(order.confirmed_at.to_time) %></td>
        <td>à partir de <%= order.pickup_time.to_time.strftime("%H:%M")%></td>
        <td>il y a <%= timeAgo(order.completed_at.to_time) %></td>
        <!-- TODO: Add other buttons for step of completion  -->
        <td><button type="button" class="uncompleted" order-id="<%= order.id %>">Plus Prêt...</button></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

